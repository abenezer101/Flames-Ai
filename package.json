    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@langchain/nomic": "^1.0.0",
    "@webcontainer/api": "^1.6.1",
    "langchain": "^1.0.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-react": "^1.0.0",
    "zustand": "^5.0.8"
  }
}
